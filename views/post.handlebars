<div class="row">
    <div class="col-md-2">
        <div class="card" style="width: 10rem;">
            <i class="fas fa-toilet"></i>
            <div class="card-body">
                <a href="post" class="btn btn-light text-dark">Home</a><br>
                <a href="profile" class="btn btn-light text-dark">Profile</a><br>
                <a href="*" class="btn btn-light text-dark">Settings</a><br>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <form action="/post" method="POST">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="title" name="title" class="form-control" id="Title" placeholder='ex. "Location"'>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="rating">Rating</label>
                        <select class="form-control" name="rating" id="rating">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="tmi">TMI</label>
                <textarea class="form-control" name="tmi" id="tmi" rows="3" placeholder="Describe your experience. (Limit 256 characters)"></textarea>
            </div>
            <button type="submit" class="btn btn-light text-dark">Submit</button>
        </form>

        <br>
        <br>
        <br>

        <div class="allPost">
            {{#each post.Post}}
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{post.Post.dataValues.title}}</h5>
                        <h6 class="card-subtitle mb-2">Rating: {{post.Post.dataValues.rating}}</h6>
                        <p class="card-text">{{post.Post.dataValues.tmi}}</p>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>

</div>